@model E_Shopper.Models.UserModel;
@{
    ViewData["Title"] = "Register";
}
<div class="col-sm-4 col-sm-offset-1">
	<div class="login-form">
		<!--login form-->
		<h2>Đăng nhập với tài khoản của bạn</h2>
		<form asp-action="Login" asp-controller="Account">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />
			<input type="text" asp-for="UserName" placeholder="Tên đăng nhập" />
			<span asp-validation-for="UserName" class="text-danger"></span>
			<input type="password" asp-for="Password" placeholder="Mật khẩu" />
			<span asp-validation-for="Password" class="text-danger"></span>
			<span>
				<input asp-for="RememberMe"  class="checkbox">
				Nhớ tôi
			</span>
			<button type="submit" class="btn btn-default">Đăng nhập</button>
		</form>
	</div><!--/login form-->
</div>
<div class="col-sm-1">
	<h2 class="or">OR</h2>
</div>
<div class="col-sm-4">
	<div class="signup-form">
		<!--sign up form-->
		<h2>Đăng Ký</h2>
		<form asp-action="Register" asp-controller="Account">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />
			<input type="text" asp-for="Email" placeholder="Địa chỉ Email" />
			<span asp-validation-for="Email" class="text-danger"></span>
			<input type="text" asp-for="Address" placeholder="Địa chỉ" />
			<span asp-validation-for="Address" class="text-danger"></span>
			<input type="password" asp-for="Password" placeholder="Mật khẩu" />
			<span asp-validation-for="Password" class="text-danger"></span>
			<input type="password" asp-for="ConfirmPassword" placeholder="Xác nhận mật khẩu" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<button type="submit" class="btn btn-default">Đăng ký</button>
		</form>
	</div><!--/sign up form-->
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}