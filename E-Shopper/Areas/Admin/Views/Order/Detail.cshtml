@model OrderModel
@{
}
<h3>Thông tin đơn hàng @Model.OrderCode</h3>
<table class="table table-bordered">
    <tr>
        <th>Mã Code</th>
        <th>Người đặt</th>
        <th>Địa chỉ giao hàng</th>
        <th>Ngày đặt</th>
        <th>Trạng thái</th>
        <th>Tổng số lượng</th>
        <th>Tổng tiền</th>
        <th>SDT người nhận</th>
    </tr>
    <tr>
        <td>@Model.OrderCode</td>
        <td>@Model.Name</td>
        <td>@Model.Address</td>
        <td>@Model.CreatedDate.ToShortDateString()</td>
        <td>
            @if (Model.Status == 0)
            {
                <span class="text-danger">Chưa giao</span>
            }
            else
            {
                <span class="text-success">Đã giao</span>
            }
        </td>
        <td>@Model.Quantity</td>
        <td>@Model.TotalPrice</td>
        <td>@Model.PhoneNumber</td>
    </tr>
</table>
<h3>Thông tin chi tiết đơn hàng</h3>
<table class="table table-bordered">
    <tr>
        <th>Ảnh</th>
        <th>Tên sản phẩm</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
    </tr>
    @foreach (var item in Model.OrderDetails)
    {
        <tr>
            <td>
                <img class="img-thumbnail" width="150" src="~/images/product-details/@item.Product.Image" />
            </td>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
        </tr>
    }
</table>
<a asp-action="Index" asp-controller="Order" asp-area="Admin">Quay lại danh sách đơn hàng</a>
