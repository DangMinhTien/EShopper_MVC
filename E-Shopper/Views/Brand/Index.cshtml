@model IEnumerable<E_Shopper.Models.ProductModel>
@{
	ViewData["Title"] = "Home Page";
	CultureInfo cultureInfo = new CultureInfo("vi-VN");
	SideBarModel sideBarModel = new SideBarModel
	{
		Brand = ViewBag.Brand as BrandModel
	};
	BrandModel Brand = ViewBag.Brand as BrandModel;
}
<partial name="_SideBarPartial" model="sideBarModel"></partial>
<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Danh sách mặt hàng của thương hiệu @Brand?.Name</h2>
		@foreach (var product in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">
						<div class="productinfo text-center">
							<a asp-action="Detail" asp-controller="Product" asp-route-id="@product.Id">
								<img src="~/images/product-details/@product.Image" alt="@product.Name" />
								<h2>@string.Format(cultureInfo, "{0:C}", product.Price)</h2>
								<p style="font-size: 18px; font-weight: bold">@product.Name</p>
								<p>Danh muc: @product.Category?.Name</p>
								<p>Thương hiệu: @product.Brand?.Name</p>
							</a>
							<a asp-action="Add" asp-controller="Cart" asp-route-id="@product.Id" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
						</div>
					</div>
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
						</ul>
					</div>
				</div>
			</div>
		}

	</div><!--features_items-->


</div>