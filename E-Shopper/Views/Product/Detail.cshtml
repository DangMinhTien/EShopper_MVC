@model ProductModel
@{
	ViewData["Title"] = "Home Page";
	CultureInfo cultureInfo = new CultureInfo("vi-VN");
}
<partial name="_SideBarPartial" model="null"></partial>
<div class="col-sm-9 padding-right">
	<div class="product-details">
		<!--product-details-->
		<div class="col-sm-5">
			<div class="view-product">
				<img style="object-fit: contain" src="~/images/product-details/@Model.Image" alt="@Model.Name" />
				<h3>ZOOM</h3>
			</div>
		</div>
		<div class="col-sm-7">
			<div class="product-information">
				<!--/product-information-->
				<h2>@Model.Name</h2>
				<span>
					<p style="font-weight: bold; color: #FE980F; font-size: 32px; margin: 0">@string.Format(cultureInfo, "{0:C}", Model.Price)</p>
					<label>Số lượng mua:</label>
					<form asp-action="Add" asp-controller="Cart" asp-route-id="@Model.Id" method="get">
						<input type="number" value="3" name="quantity"/>
						<button type="submit" class="btn btn-fefault cart">
							<i class="fa fa-shopping-cart"></i>
							Add to cart
						</button>
					</form>
				</span>
				<p><b>Số lượng còn:</b> @Model.Quantity</p>
				<p><b>Thể loại:</b> @Model.Category?.Name</p>
				<p><b>Thương hiệu:</b> @Model.Brand?.Name</p>
				<a href=""><img src="~/images/product-details/share.png" class="share img-responsive" alt="" /></a>
			</div><!--/product-information-->
		</div>
	</div><!--/product-details-->

	<div class="category-tab shop-details-tab">
		<!--category-tab-->
		<div class="col-sm-12">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#details" data-toggle="tab">Details</a></li>
				<li><a href="#companyprofile" data-toggle="tab">Company Profile</a></li>
				<li><a href="#tag" data-toggle="tab">Tag</a></li>
				<li><a href="#reviews" data-toggle="tab">Reviews (5)</a></li>
			</ul>
		</div>
		<div class="tab-content">
			<div class="tab-pane fade active in" id="details">
				@Model.Description
			</div>

			<div class="tab-pane fade" id="companyprofile">
				
			</div>

			<div class="tab-pane fade" id="tag">
				
			</div>

			<div class="tab-pane fade" id="reviews">
				<div class="col-sm-12">
					<p><b>Write Your Review</b></p>

					<form action="#">
						<span>
							<input type="text" placeholder="Your Name" />
							<input type="email" placeholder="Email Address" />
						</span>
						<textarea name=""></textarea>
						<b>Rating: </b> <img src="images/product-details/rating.png" alt="" />
						<button type="button" class="btn btn-default pull-right">
							Submit
						</button>
					</form>
				</div>
			</div>

		</div>
	</div><!--/category-tab-->

