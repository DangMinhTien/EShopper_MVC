@using Microsoft.AspNetCore.Identity
@using E_Shopper.Models

@inject SignInManager<AppUserModel> SignInManager
@inject UserManager<AppUserModel> UserManager
@if (SignInManager.IsSignedIn(User))
{
    AppUserModel user = await UserManager.GetUserAsync(User);
    <li><a asp-action="Index" asp-controller="Account"><i class="fa fa-user"></i> @user?.UserName</a></li>
    <li><a asp-action="Index" asp-controller="MyOrder"><i class="fa fa-star"></i> Đơn hàng của tôi</a></li>
    <li><a asp-action="Index" asp-controller="Cart"><i class="fa fa-crosshairs"></i> Đặt hàng</a></li>
    <li><a asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i> Giỏ hàng</a></li>
    <li><a href="" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-lock"></i> Đăng xuất</a></li>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Đăng Xuất</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h3 class="text-center">Bạn có muốn đăng xuất không ?</h3>
                </div>
                <div class="modal-footer">
                    <form asp-action="Logout" asp-controller="Account" method="post">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary" style="margin-top: 0;">Đăng xuất</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <li><a asp-action="Index" asp-controller="Account"><i class="fa fa-user"></i> Account</a></li>
    <li><a asp-action="Index" asp-controller="Cart"><i class="fa fa-crosshairs"></i> Đặt hàng</a></li>
    <li><a asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i> Giỏ hàng</a></li>
    <li><a asp-action="Index" asp-controller="Account"><i class="fa fa-lock"></i> Đăng nhập</a></li>
}