@model E_Shopper.Views.Shared.Components.BrandsSideBar.BrandSideBarView
@{
}
@foreach(var item in Model.Brands)
{
	var css = "brand";
	if (item.Id == Model.Brand?.Id)
		css += " active";
	<div class="brands-name">
		<ul class="nav nav-pills nav-stacked">
			<li><a class="@css" asp-action="Index" asp-controller="Brand" asp-route-Slug="@item.Slug"> <span class="pull-right">(@item.Products?.Count())</span>@item.Name</a></li>
		</ul>
	</div>
}